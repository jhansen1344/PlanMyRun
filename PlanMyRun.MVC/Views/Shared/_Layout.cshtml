<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>


<body>
    <wrapper class="d-flex flex-column">

        <nav class="navbar navbar-expand-md fixed-top">
            <div class="container">
                <div class="navbar-brand" id="logo">
                    <a href="@Url.Action("Index","Home")">
                        <img src="~/Content/assets/PMR_logo100_t.png" alt="logo">
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarSupportedContent">

                    <ul class="nav navbar-nav mr-auto">
                        <li class="nav-item"><button class="btn btn-sm" type="button">@Html.ActionLink("Race Plans", "Index", "RacePlan", null, new { @class = "nav-link" })</button></li>
                        @if (Request.IsAuthenticated)
                        {
                            <li class="nav-item"><button class="btn btn-sm" type="button">@Html.ActionLink("My Runs", "Index", "Run", null, new { @class = "nav-link" })</button></li>
                            <li class="nav-item"><button class="btn btn-sm" type="button">@Html.ActionLink("My Locations", "Index", "Location", null, new { @class = "nav-link" })</button></li>
                            <li class="nav-item"><button class="btn btn-sm" type="button">@Html.ActionLink("Forecast", "Index", "Forecast", null, new { @class = "nav-link" })</button></li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>



        <main role="main" class="flex-fill">
            <div class="container body-content">
                @RenderBody()
            </div>

        </main>
        <footer>
            <div class="container-fluid">
                <div class="row justify-content-around ">
                    <p>&copy; @DateTime.Now.Year - PlanMyRun</p>
                    <div class="align-middle">
                        Forecast powered by :
                        <img src="~/Content/assets/WeatherUnlockedLogo.png" alt="WeatherUnlockedAPI" />
                    </div>

                </div>
               
            </div>
        </footer>
    </wrapper>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
