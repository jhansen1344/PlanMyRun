@model PlanMyRun.Models.RacePlanModels.RacePlanDetail

@{
    ViewBag.Title = "Delete Plan";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-auto mb-4">
            <div class="card margin">
                <div>
                    <a href="@Url.Action("Details","RacePlan",new { id = Model.Id })" title="Back to Details"><img alt="Back To Details" src="@Url.Content("~/Content/assets/box-arrow-left.svg")" /></a>
                </div>
                <div class="card-header text-center"><h2> @ViewBag.Title</h2></div>
                <div class="card-body">

                    <h3>Sure you want to delete?</h3>
                    <div>
                        <ul>
                            <li> @Html.DisplayNameFor(model => model.RaceName):  @Html.DisplayFor(model => model.RaceName)</li>
                            <li>@Html.DisplayNameFor(model => model.RaceDate): @String.Format("{0:d}", Model.RaceDate)</li>
                            <li> @Html.DisplayNameFor(model => model.RaceLength): @Html.DisplayFor(model => model.RaceLength)  </li>
                            <li>@Html.DisplayNameFor(model => model.GoalTime): @Html.DisplayFor(model => model.GoalTime)</li>
                            <li>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</li>
                            <li>@Html.DisplayNameFor(model => model.IsPublic): @Html.DisplayFor(model => model.IsPublic) </li>

                        </ul>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color text-center">
                                <input type="submit" value="Delete" class="btn btn-default" />

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>