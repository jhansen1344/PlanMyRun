@model IEnumerable<PlanMyRun.Models.LocationModels.LocationListItem>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class=" margin text-center">
        <h2>
            My Locations
            <a href="@Url.Action("Create","Location")" title="Add"><img alt="Add" src="@Url.Content("~/Content/assets/plus-square.svg")" /></a>

        </h2>
    </div>

    @foreach (var item in Model)
    {
        <div class="row justify-content-center">
            <div class="col-auto mb-4">
                <div class="card margin">
                    <div class="card-header">@Html.DisplayFor(modelItem => item.Name)</div>
                    <div class="row justify-content-around">
                        <a href="@Url.Action("Edit","Location", new { id = item.Id })" title="Edit"><img alt="Edit" src="@Url.Content("~/Content/assets/pencil-square.svg")" /></a>
                        <a href="@Url.Action("Details","Location", new { id = item.Id })" title="Details"><img alt="Details" src="@Url.Content("~/Content/assets/info-square.svg")" /></a>
                        <a href="@Url.Action("Delete","Location", new { id = item.Id })" title="Delete"><img alt="Delete" src="@Url.Content("~/Content/assets/trash.svg")" /></a>
                    </div>
                    <div class="card-body">
                        <ul>

                            <li>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(modelItem => item.Name)</li>
                            <li> @Html.DisplayNameFor(model => model.MaxDistance):  @Html.DisplayFor(modelItem => item.MaxDistance)</li>
                            <li> @Html.DisplayNameFor(model => model.HasLoops):   @Html.DisplayFor(modelItem => item.HasLoops)</li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    }

</div>
